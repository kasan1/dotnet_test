  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            },
            {
              "Name": "File",
              "Args": {
                "path": "Logs/logs-info-.txt",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine:1}",
                "restrictedToMinimumLevel": "Information",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 14,
                "hooks": "Agro.Shared.Logic.Serilog.SerilogHooks::MyArchiveHooks, Agro.Shared.Logic"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "Logs/logs-.txt",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine:1}{Exception:1}{NewLine:1}",
                "restrictedToMinimumLevel": "Error",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 14,
                "hooks": "Agro.Shared.Logic.Serilog.SerilogHooks::MyArchiveHooks, Agro.Shared.Logic"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "Logs/logs-.json",
                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                "restrictedToMinimumLevel": "Error",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 14,
                "hooks": "Agro.Shared.Logic.Serilog.SerilogHooks::MyArchiveHooks, Agro.Shared.Logic"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "Agro.Okaps.Api"
    }
  }
}